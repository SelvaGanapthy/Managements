<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="#ee31c0"
    android:elevation="5dp"
    android:orientation="horizontal"
    android:paddingBottom="1dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_VendorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="6dp"
            android:fontFamily="serif"
            android:text="VendorName1"
            android:textColor="#8618a3"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_costCentre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="36dp"
            android:fontFamily="serif"
            android:text="Mayflower"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_poId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:fontFamily="serif"
            android:text="PO_000171"
            android:textColor="#6b81ee"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="60dp"
            android:fontFamily="serif"
            android:text="17/11/2017"
            android:textColor="#6b81ee"
            android:textSize="15dp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/tv_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="18dp"
            android:layout_marginTop="25dp"
            android:text="1,25,000"
            android:textColor="#e12c2c"
            android:textSize="18dp" />



        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Approved"
            android:textColor="#e12c2c"
            android:textSize="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="55dp" />


    </android.support.v7.widget.CardView>
</LinearLayout>